@model LeaveManagementSystem.Web.Data.LeaveType

@{
    ViewData["Title"] = "Create Leave Type";
}
<h1>Create Leave Type</h1>
    <hr />

    <div class="row">
        <div class="col-mid-4">
            <form asp-action="create">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <br/>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <br/>

                <div class="form-group">
                    <label asp-for="NumberOfDays" class="control-label"></label>
                    <input asp-for="NumberOfDays" class="form-control" />
                    <span asp-validation-for="NumberOfDays" class="text-danger"></span>
                </div>

                <br/>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-primary">Back to List</a>
                </div>
                <br/>
            </form>
        </div>
    </div>

    @section Scripts{
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }